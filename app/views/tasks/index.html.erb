	<tr>
		<th>Task</th>
		<th>CSM</th>
		<th>Customer</th>
		<th>Instructions</th>
		<th>Due date</th>
		<th></th>
	</tr>
	<%= render @tasks %>
</table>

<%= will_paginate %>