<% provide(:title, 'Workspace') %>
<div><h1><%= current_user.name%>'s current tasks</h1>

<p><%= link_to "Create New Task", new_task_path, class: "btn" %></p>

<%= will_paginate %>

<table class="table table-hover table-bordered table-condensed">
	<% if @tasks != nil%>
	<tr>
		<th><%= sortable "id", "Task" %></th>
		<th><%=	sortable "csm_id", "CSM" %></th>
		<th><%=	sortable "customer_id", "Customer" %></th>
		<th>Instructions</th>
		<th><%=	sortable "due_date", "Due Date" %></th>
		<th>Notes</th>
		<th>Done?</th>
		<th></th>
	</tr>
		<%= render @tasks %>
	<%else %>
	<h2>No current tasks to work on</h2>
	<% end %>
</table>

<%= will_paginate %>