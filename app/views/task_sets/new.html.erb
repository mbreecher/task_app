<% provide(:title, 'New Task Set')%>
<h1>Create New Task Set</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@task_set) do |f| %>
			<%= render 'shared/task_set_errors' %>

			<%= f.label :name, "Task Name" %>
			<%= f.text_field :name %>

			<%= f.label :csm_id, "CSM" %>
			<%= f.collection_select(:csm_id, User.where(id: current_user.id), :id, :name) %>

			<%= f.submit "Create Task Set", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>