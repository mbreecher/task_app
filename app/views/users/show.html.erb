<% provide(:title, @user.name)%>
<div class="row">
	<aside class = "span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 50 %>
				<%= @user.name %>
				<% if @user.admin? %>
					<div>admin user</div>
				<% end %>
			</h1>
		</section>
	</aside>
</div>
<%= @user.name %>, <%= @user.email %>